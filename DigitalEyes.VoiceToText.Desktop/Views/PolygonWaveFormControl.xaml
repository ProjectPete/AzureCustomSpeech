<UserControl x:Class="DigitalEyes.VoiceToText.Desktop.PolygonWaveFormControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalEyes.VoiceToText.Desktop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="mainGrid" Panel.ZIndex="888" Background="White" MouseLeftButtonDown="LeftButtDown" MouseLeave="LeftButtLeave" MouseMove="LeftButtMove" MouseLeftButtonUp="LeftButtUp">
        <Canvas x:Name="mainCanvas" Grid.Column="1" IsHitTestVisible="False" >
            <Grid Background="Transparent" Height="{Binding ActualHeight, ElementName=mainGrid}" Width="{Binding ActualWidth, ElementName=mainGrid}"/>
        </Canvas>
        
    </Grid>
</UserControl>
